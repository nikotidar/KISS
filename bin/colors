#!/usr/bin/env bash

# colors
text="#ffffff"
warning="#232e2f"
background="#e62b343b"

# other stuff
trs="%{F#00000000}"
bg="%{B$background}"
txt="%{F$text}"
wrn="%{F$warning}"

# accents
acc0="#f5374049"
acc1="#4e5a65"
acc2="#f52e363d"
acc3="#ffffff"

# background accents
a0="%{B$acc0}"
a1="%{B$acc1}"
a2="%{B$acc2}"
a3="%{B$acc3}"

# foreground accents
af0="%{F$acc0}"
af1="%{F$acc1}"
af2="%{F$acc2}"
af3="%{F$acc3}"

# misc
bgt="%{B$text}"
bgf="%{F$background}"
